package org.netcomputing.webservices.server;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.servlet.http.HttpServletResponse;
import javax.ws.rs.Consumes;
import javax.ws.rs.FormParam;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Request;
import javax.ws.rs.core.UriInfo;

import org.netcomputing.webservices.datamodel.User;
import org.netcomputing.webservices.datamodel.UserDAO;


//Will map the resource to the URL positions
@Path("/texts/requests")
public class Requests {
	// Allows to insert contextual objects into the class,
	// e.g. ServletContext, Request, Response, UriInfo 
	
	@Context UriInfo uriInfo;
	@Context
	Request request;

	// Return the list of users to the user in the browser 
	@GET
	@Produces({MediaType.TEXT_XML, MediaType.APPLICATION_JSON})
	public List<User> getEventsBrowser() {
		List<User> events = new ArrayList<User>();
		events.addAll(UserDAO.instance.getModel().values());
		return events;
	}

	// Return the list of user for applications 
	@GET
	@Produces({ MediaType.APPLICATION_XML, MediaType.APPLICATION_JSON })
	public List<User> getEvents() {
		List<User> events = new ArrayList<User>();
		events.addAll(UserDAO.instance.getModel().values());
		return events;
	}

	// returns the number of Users
	// Use
	// http://localhost:8080/.../rest/events/count
	// to get the total number of records @GET @Path("count")
	@Produces(MediaType.TEXT_PLAIN)
	public String getCount() {
		int count = UserDAO.instance.getModel().size();
		return String.valueOf(count);
	}
	
	@POST
	@Produces(MediaType.TEXT_HTML)
	@Consumes(MediaType.APPLICATION_FORM_URLENCODED)
	public void newLocation(@FormParam("id") Long id,
			@FormParam("message") String message,
			@FormParam("value") Integer score,
			@Context HttpServletResponse servletResponse) throws IOException {
		User u= new User();
		u.setUID(id);
		u.setName(message);
		u.setScore(score);
		UserDAO.instance.getModel().put(id.toString(), u);
		servletResponse.sendRedirect("../restinterface.html");
	}

	// Defines that the next path parameter after Events is
	// treated as a parameter and passed to the EventResource
	// Allows to type
	// http://localhost:8080/.../rest/locations/1
	// 1 will be treaded as parameter and passed to EventResource
	@Path("{user}")
	public UserResource getLocation(@PathParam("user") String id) {
		return new UserResource(uriInfo, request, id);
	}
}
